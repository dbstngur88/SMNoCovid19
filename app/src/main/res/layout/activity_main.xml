<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawerLayout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:background="@drawable/round_value_weakmint"
            >
            <ImageView
                android:id="@+id/openDrawerView"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/ic_menu"
                android:layout_margin="10sp"
                android:layout_gravity="center_vertical"
                android:onClick="mClick"
                />
            <TextView
                android:id="@+id/userInfo"
                android:layout_width="0sp"
                android:layout_height="60sp"
                android:layout_weight="1"
                android:text="사용자 정보 출력"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_margin="5sp"
                />
            <ImageView
                android:id="@+id/imgSignOut"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/signout"
                android:layout_margin="10sp"
                android:layout_gravity="center_vertical"
                android:onClick="mClick"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/smcoronaimg"
            android:layout_width="match_parent"
            android:layout_height="270sp"
            android:src="@drawable/sunmooncorona"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="570sp"
            >
            <TableRow>
                <LinearLayout
                    android:id="@+id/qrCodeScan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="240sp"
                        android:layout_height="240sp"
                        android:layout_gravity="center"
                        android:src="@drawable/code_scan"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QR코드 스캔"
                        android:layout_gravity="center"
                        android:textSize="30sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/timeline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="240sp"
                        android:layout_height="240sp"
                        android:layout_gravity="center"
                        android:src="@drawable/timeline"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동선 기록 확인"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </TableRow>
            <TableRow>
                <LinearLayout
                    android:id="@+id/coronaMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="240sp"
                        android:layout_height="240sp"
                        android:layout_gravity="center"
                        android:src="@drawable/map"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="확진자 방문지"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/document"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="240sp"
                        android:layout_height="240sp"
                        android:layout_gravity="center"
                        android:src="@drawable/pencil"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="코로나 19 문진표"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </TableRow>
        </TableLayout>




    </LinearLayout>
    <include layout="@layout/drawer_view"
        />
</androidx.drawerlayout.widget.DrawerLayout>